{
    "manifest_version": 2,
    "name": "Better Twitter",
    "version": "1.0",

    "description": "Adjustments to the appearance of Twitter.",

    "icons": {
        "48": "icons/icon-48.png",
        "96": "icons/icon-96.png"
    },

    "content_scripts": [{
        "matches": ["*://*.twitter.com/*"],
        "js": ["bettertwitter.js"]
    }]
}